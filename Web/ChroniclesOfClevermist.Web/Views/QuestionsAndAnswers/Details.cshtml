@model ChroniclesOfClevermist.Web.ViewModels.QuestionsAndAnswers.AllAnswersViewModel
@using ChroniclesOfClevermist.Common
@{
    this.ViewData["Title"] = "Answers";
}

<h1 class="text-center fontsecond m-4">@Model.QuestionText</h1>


@foreach (var answer in Model.Answers)
{
    <div class="media container-fluid">
        <div class="media-body border-bottom">
            @answer.Text
            <p class="text-right">@answer.CreatedOn</p>
            <br />
        </div>
    </div>
}

@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <a class="btn btn-danger" onclick="location.href='@Url.Action("AddAnswer", "QuestionsAndAnswers", new { Id = Model.QuestionId })'">Add answer</a>
}