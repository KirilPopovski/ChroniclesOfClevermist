@using ChroniclesOfClevermist.Common
@model ChroniclesOfClevermist.Web.ViewModels.QuestionsAndAnswers.AllQuestionsViewModel
@{
    this.ViewData["Title"] = "QuestionsAndAnswers";
}

@foreach (var question in Model.Questions)
{
    <div class="media">
        <div class="media-body">
            <h5 class="mt-0">@question.Text</h5>
            @question.CreatedOn
            <a class="btn btn-primary" onclick="location.href='@Url.Action("Details", "QuestionsAndAnswers", new { Id = question.Id})'">Read answers</a>
        </div>
    </div>
}

@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <a class="btn btn-danger" asp-controller="QuestionsAndAnswers" asp-action="AddQuestion">Add Question</a>
}

