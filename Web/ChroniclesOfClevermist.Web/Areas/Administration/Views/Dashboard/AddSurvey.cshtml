@model ChroniclesOfClevermist.Web.ViewModels.Administration.Dashboard.AddSurveyModel
@{
    this.ViewData["Title"] = "AddSurvey";
}

<h1>@this.ViewData["Title"]</h1>

<form enctype="multipart/form-data" method="post">

    <div class="form-group">
        <label asp-for="Topic">Topic</label>
        <input asp-for="Topic" type="text" class="form-control">
        <span asp-validation-for="Topic" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Dashboard" asp-action="AddSurvey">Add Survey</button>
</form>